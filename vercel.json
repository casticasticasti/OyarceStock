{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "framework": "vite",
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "zeroConfig": true
      }
    }
  ],
  "rewrites": [
    {
      "source": "/assets/:path*",
      "destination": "/assets/:path*"
    },
    {
      "source": "/:file(*)\\.(js|css|png|jpg|jpeg|gif|ico|svg)",
      "destination": "/:file.:ext"
    },
    {
      "source": "/:any*",
      "destination": "/index.html"
    }
  ]
}